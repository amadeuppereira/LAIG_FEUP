<yas>

    <scene root="myScene" axis_length="1" />

    <views default="view1" >

        <perspective id="view1" near="0.1" far="500" angle="0.4">
            <from x="15" y="15" z="15" />
            <to x="0" y="0" z="0" />
        </perspective>

    </views>

    <ambient>
        <ambient r="0.5" g="0.5" b="0.5" a="0.5" />
        <background r="0.0" g="0.0" b="0.0" a="0.5" />
    </ambient>

    <lights>

        <omni id="lightHouse" enabled="1" >
            <location x="50" y="15" z="35" w="0.5" />
            <ambient r="0.5" g="0.5" b="0.5" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />
        </omni>

        <omni id="lightSun" enabled="1" >
            <location x="50" y="50" z="50" w="0.5" />
            <ambient r="0.5" g="0.5" b="0.5" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />
        </omni>

        <omni id="lightShip1" enabled="1" >
            <location x="0" y="0" z="0" w="0.5" />
            <ambient r="0.5" g="0.5" b="0.5" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />
        </omni>

        <omni id="lightShip2" enabled="1" >
            <location x="1000" y="0" z="100" w="0.5" />
            <ambient r="0.5" g="0.5" b="0.5" a="1.0" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0.5" g="0.5" b="0.5" a="1.0" />
        </omni>
        
    </lights>

    <textures>

        <texture id="groundTexture" file="./scenes/images/ground.png" />
        <texture id="portalTexture" file="./scenes/images/portal.png" />
        <texture id="rockTexture" file="./scenes/images/rock.png" />
        <texture id="wallTexture" file="./scenes/images/wallHouse.png" />
        <texture id="floorTexture" file="./scenes/images/floor.png" />

    </textures>

    <materials>

        <material id="default" shininess = "100" >
            <emission r="0.0" g="0.0" b="0.0" a="1" />
            <ambient r="0.2" g="0.2" b="0.2" a="1" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1" />
            <specular r="0.5" g="0.5" b="0.5" a="1" />
        </material>

    </materials>

    <transformations>

        <transformation id="transformationHouse">
            <translate x="35" y="0" z="20" />
        </transformation>

        <transformation id="transformationGround">
            <rotate axis="x" angle="90" />
            <translate x="50" y="50" z="0" />
            <scale x="100" y="100" z="1" />
        </transformation>

        <transformation id="transformationWall">
            <translate x="15" y="10" z="0" />
            <scale x="30" y="20" z="2" />
        </transformation>

        <transformation id="transformationPortal">
            <translate x="4" y="8" z="0" />
            <scale x="8" y="16" z="1" />
        </transformation>

        <transformation id="transformationFloor">
            <translate x="0" y="0" z="30" />
            <rotate axis="x" angle="-90" />
            <translate x="15" y="15" z="0" />
            <scale x="30" y="30" z="1" />
        </transformation>

        <transformation id="transformationRock">
            <translate x="3" y="3" z="3" />
            <scale x="6" y="6" z="6" />
        </transformation>

    </transformations>

    <primitives>

        <primitive id="rectangle">          
            <rectangle x1="-0.5" y1="0.5" x2="0.5" y2="-0.5" />      
        </primitive >

        <primitive id="cylinder">
            <cylinder base="0.5" top="0.5" height="1" slices="8" stacks="8" />
        </primitive >

        <primitive id="sphere">
            <sphere radius="0.5" slices="8" stacks="8" />
        </primitive >

    </primitives >

    <components>
        <component id="myScene">
            <transformation>
                <translate x="0" y="0" z="0" />
            </transformation>
            <materials>
                <material id="default" />
            </materials>
            <texture id="none" length_s="0" length_t="0" />
            <children>
                <componentref id="ground" />
                <componentref id="portal1" />
                <componentref id="house" />
                <componentref id="rock1" />
                <componentref id="rock2" />
                <componentref id="rock3" />
                <componentref id="rock4" />
            </children>
        </component>

        <component id="ground">
            <transformation>
                <transformationref id="transformationGround"/>
            </transformation>
            <materials>
                <material id="default"/>
            </materials>
            <texture id="groundTexture" length_s="1" length_t="1" />
            <children>
                <primitiveref id="rectangle"/>
            </children>
        </component>

        <component id="rock">
            <transformation>
                <transformationref id="transformationRock"/>
            </transformation>
            <materials>
                <material id="default"/>
            </materials>
            <texture id="rockTexture" length_s="1" length_t="1" />
            <children>
                <primitiveref id="sphere"/>
            </children>
        </component>

        <component id="rock1">
            <transformation>
                <translate x="25" y="0" z="90" />
            </transformation>
            <materials>
                <material id="default"/>
            </materials>
            <texture id="inherit" length_s="1" length_t="1" />
            <children>
                <componentref id="rock"/>
            </children>
        </component>

        <component id="rock2">
            <transformation>
                <translate x="25" y="0" z="10" />
            </transformation>
            <materials>
                <material id="default"/>
            </materials>
            <texture id="rockTexture" length_s="1" length_t="1" />
            <children>
                <componentref id="rock"/>
            </children>
        </component>

        <component id="rock3">
            <transformation>
                <translate x="90" y="0" z="40" />
            </transformation>
            <materials>
                <material id="default"/>
            </materials>
            <texture id="rockTexture" length_s="1" length_t="1" />
            <children>
                <componentref id="rock"/>
            </children>
        </component>

        <component id="rock4">
            <transformation>
                <translate x="90" y="0" z="90" />
            </transformation>
            <materials>
                <material id="default"/>
            </materials>
            <texture id="rockTexture" length_s="1" length_t="1" />
            <children>
                <componentref id="rock"/>
            </children>
        </component>

        <component id="portal">
            <transformation>
                <transformationref id="transformationPortal"/>
            </transformation>
            <materials>
                <material id="default"/>
            </materials>
            <texture id="inherit" length_s="1" length_t="1" />
            <children>
                <primitiveref id="rectangle"/>
            </children>
        </component>

       <component id="portal1">
            <transformation>
                <translate x="15" y="0" z="80" />
            </transformation>
            <materials>
                <material id="default"/>
            </materials>
            <texture id="portalTexture" length_s="1" length_t="1" />
            <children>
                <componentref id="portal1_1"/>
                <componentref id="portal1_2"/>
            </children>
        </component>

        <!-- front portal -->
        <component id="portal1_1">
            <transformation>
                <translate x="0" y="0" z="0" />
            </transformation>
            <materials>
                <material id="default"/>
            </materials>
            <texture id="inherit" length_s="1" length_t="1" />
            <children>
                <componentref id="portal"/>
            </children>
        </component>

        <!-- back portal -->
        <component id="portal1_2">
            <transformation>
                <translate x="8" y="0" z="0" />
                <rotate axis="y" angle="180" />
            </transformation>
            <materials>
                <material id="default"/>
            </materials>
            <texture id="inherit" length_s="1" length_t="1" />
            <children>
                <componentref id="portal"/>
            </children>
        </component>

        <component id="portal2">
            <transformation>
                <translate x="11" y="0" z="0" />
            </transformation>
            <materials>
                <material id="default"/>
            </materials>
            <texture id="portalTexture" length_s="1" length_t="1" />
            <children>
                <componentref id="portal"/>
            </children>
        </component>

        <component id="wall">
            <transformation>
                <transformationref id="transformationWall"/>
            </transformation>
            <materials>
                <material id="default"/>
            </materials>
            <texture id="inherit" length_s="1" length_t="1" />
            <children>
                <primitiveref id="rectangle"/>
            </children>
        </component>

        <!-- back wall -->
        <component id="wall1">
            <transformation>
                <translate x="0" y="0" z="0" />
            </transformation>
            <materials>
                <material id="default"/>
            </materials>
            <texture id="wallTexture" length_s="1" length_t="1" />
            <children>
                <componentref id="wall"/>
            </children>
        </component>

        <!-- left wall -->
        <component id="wall2">
            <transformation>
                <translate x="0" y="0" z="30" />
                <rotate axis="y" angle="-90" />
            </transformation>
            <materials>
                <material id="default"/>
            </materials>
            <texture id="wallTexture" length_s="1" length_t="1" />
            <children>
                <componentref id="wall"/>
            </children>
        </component>

        <!-- front wall -->
        <component id="wall3">
            <transformation>
                <translate x="30" y="0" z="30" />
                <rotate axis="y" angle="180" />
            </transformation>
            <materials>
                <material id="default"/>
            </materials>
            <texture id="wallTexture" length_s="1" length_t="1" />
            <children>
                <componentref id="wall"/>
            </children>
        </component>

        <!-- right wall -->
        <component id="wall4">
            <transformation>
                <translate x="30" y="0" z="0" />
                <rotate axis="y" angle="90" />
            </transformation>
            <materials>
                <material id="default"/>
            </materials>
            <texture id="wallTexture" length_s="1" length_t="1" />
            <children>
                <componentref id="wall"/>
                <componentref id="portal2"/>
            </children>
        </component>

        <component id="floor">
            <transformation>
                <transformationref id="transformationFloor"/>
            </transformation>
            <materials>
                <material id="default"/>
            </materials>
            <texture id="floorTexture" length_s="1" length_t="1" />
            <children>
                <primitiveref id="rectangle"/>
            </children>
        </component>

        <component id="house">
            <transformation>
                <transformationref id="transformationHouse"/>
            </transformation>
            <materials>
                <material id="default"/>
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="wall1"/>
                <componentref id="wall2"/>
                <componentref id="wall3"/>
                <componentref id="wall4"/>
                <componentref id="floor"/>
            </children>
        </component>

    </components>
</yas>