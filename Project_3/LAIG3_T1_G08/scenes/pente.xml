<yas>

    <scene root="myScene" axis_length="5" />

    <views default="scene_view" >

        <perspective id="scene_view" near="0.1" far="500" angle="23">
            <from x="15" y="15" z="15" />
            <to x="0" y="0" z="0" />
        </perspective>

        <perspective id="previous_scene_view" near="0.1" far="500" angle="30">
            <from x="22" y="10" z="45" />
            <to x="20" y="0" z="35" />
        </perspective>

    </views>

    <ambient>
        <ambient r="0" g="0" b="0" a="1" />
        <background r="0.8" g="0.4" b="0.2" a="0.8" />
    </ambient>

    <lights>

        <omni id="lightCenter" enabled="1" >
            <location x="25" y="15" z="25" w="0.5" />
            <ambient r="0.5" g="0.5" b="0.5" a="1"/>
            <diffuse r="0.7" g="0.7" b="0.7" a="1"/>
            <specular r="0.7" g="0.7" b="0.7" a="1"/>
        </omni>

        <omni id="lightCorner1" enabled="1" >
            <location x="50" y="15" z="0" w="1" />
            <ambient r="0.1" g="0.1" b="0.1" a="1"/>
            <diffuse r="0.7" g="0.7" b="0.7" a="1"/>
            <specular r="0.7" g="0.7" b="0.7" a="1"/>
        </omni>

        <omni id="lightCorner2" enabled="1" >
            <location x="50" y="15" z="50" w="1" />
            <ambient r="0.1" g="0.1" b="0.1" a="1"/>
            <diffuse r="0.7" g="0.7" b="0.7" a="1"/>
            <specular r="0.7" g="0.7" b="0.7" a="1"/>
        </omni>

        <omni id="lightCorner3" enabled="1" >
            <location x="0" y="15" z="50" w="1" />
            <ambient r="0.1" g="0.1" b="0.1" a="1"/>
            <diffuse r="0.7" g="0.7" b="0.7" a="1"/>
            <specular r="0.7" g="0.7" b="0.7" a="1"/>
        </omni>

        <omni id="lightCorner4" enabled="1" >
            <location x="0" y="15" z="0" w="1" />
            <ambient r="0.1" g="0.1" b="0.1" a="1"/>
            <diffuse r="0.7" g="0.7" b="0.7" a="1"/>
            <specular r="0.7" g="0.7" b="0.7" a="1"/>
        </omni>
        
    </lights>

    <textures>

        <texture id="wallTexture" file="./scenes/images/wallHouse.png" />
        <texture id="floorTexture" file="./scenes/images/floor.png" />
        <texture id="couchTexture" file="./scenes/images/couch.png" />
        <texture id="tableTexture" file="./scenes/images/table.png" />
        <texture id="chairTexture" file="./scenes/images/chair.png" />
        <texture id="boardTexture" file="./scenes/images/board.png" />
 
    </textures>

    <materials>

        <material id="default" shininess = "10" >
            <emission r="0.0" g="0.0" b="0.0" a="1" />
            <ambient r="0.2" g="0.2" b="0.2" a="1" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1" />
            <specular r="0.5" g="0.5" b="0.5" a="1" />
        </material>

        <material id="floorMaterial" shininess="0.01">
            <emission r="0" g="0" b="0" a="0"/>
            <ambient r="0.98" g="0.98" b="0.87" a="1"/>
            <diffuse r="0.98" g="0.98" b="0.87" a="1"/>
            <specular r="0" g="0" b="0" a="1"/>
        </material>

        <material id="wallMaterial" shininess="1">
            <emission r="0" g="0" b="0" a="0"/>
            <ambient r="1" g="1" b="0.9" a="1"/>
            <diffuse r="1" g="1" b="0.9" a="1"/>
            <specular r="1" g="1" b="0.9" a="1"/>
        </material>

        <material id="couchMaterial" shininess="0.1">
            <emission r="0" g="0" b="0" a="0"/>
            <ambient r="0" g="0.3" b="0.55" a="1"/>
            <diffuse r="0" g="0.3" b="0.55" a="1"/>
            <specular r="0" g="0" b="0" a="1"/>
        </material>

        <material id="tableMaterial" shininess="0.01">
            <emission r="0" g="0" b="0" a="0"/>
            <ambient r="0.4" g="0.2" b="0.1" a="1"/>
            <diffuse r="0.8" g="0.4" b="0.1" a="1"/>
            <specular r="0.4" g="0.2" b="0.1" a="1"/>
        </material>
        
        <material id="tableLegsMaterial" shininess="10">
            <emission r="0" g="0" b="0" a="0"/>
            <ambient r="0.4" g="0.4" b="0.4" a="1"/>
            <diffuse r="0.8" g="0.8" b="0.8" a="1"/>
            <specular r="0.8" g="0.8" b="0.8" a="1"/>
        </material>

        <material id="chairMaterial" shininess="0.01">
            <emission r="0" g="0" b="0" a="0"/>
            <ambient r="0.4" g="0.4" b="0.4" a="1"/>
            <diffuse r="0.8" g="0.8" b="0.8" a="1"/>
            <specular r="0.8" g="0.8" b="0.8" a="1"/>
        </material>

        <material id="greenPieceMaterial" shininess="50">
            <emission r="0" g="0" b="0" a="0"/>
            <ambient r="0" g="0.7" b="0" a="1"/>
            <diffuse r="0" g="0.7" b="0" a="1"/>
            <specular r="1" g="1" b="1" a="1"/>
        </material>

        <material id="redPieceMaterial" shininess="50">
            <emission r="0" g="0" b="0" a="0"/>
            <ambient r="0.7" g="0" b="0" a="1"/>
            <diffuse r="0.7" g="0" b="0" a="1"/>
            <specular r="1" g="1" b="1" a="1"/>
        </material>

        <material id="previewPieceMaterial" shininess="50">
            <emission r="0" g="0" b="0" a="0"/>
            <ambient r="0.7" g="0.7" b="0.7" a="1"/>
            <diffuse r="0.7" g="0.7" b="0.7" a="1"/>
            <specular r="1" g="1" b="1" a="1"/>
        </material>

    </materials>

    <transformations>

        <transformation id="transformationWall">
            <translate x="20" y="9" z="0.25" />
            <scale x="40" y="18" z="0.5" />
        </transformation>

        <transformation id="transformationFloor">
            <translate x="0" y="0.1" z="40" />
            <rotate axis="x" angle="-90" />
            <translate x="20" y="20" z="0" />
            <scale x="40" y="40" z="1" />
        </transformation>

    </transformations>

    <animations>

    </animations>

    <primitives>

        <primitive id="rectangle">          
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />      
        </primitive>

        <primitive id="cylinder">
            <cylinder base="0.5" top="0.5" height="1" slices="20" stacks="20" />
        </primitive>

        <primitive id="sphere">
            <sphere radius="0.5" slices="50" stacks="20" />
        </primitive>

        <primitive id="triangle">
            <triangle x1="0.5" y1="1" z1="0" x2="0" y2="0" z2="0" x3="1" y3="0" z3="0" />
        </primitive>   

        <primitive id="board">
            <board p1="greenPieceMaterial" p2="redPieceMaterial" preview="previewPieceMaterial"/>
        </primitive>    

        <primitive id="greenPiece">
            <piece npartsU="50" npartsV="50" idmaterial="greenPieceMaterial" />
        </primitive>

        <primitive id="redPiece">
            <piece npartsU="50" npartsV="50" idmaterial="redPieceMaterial" />
        </primitive>
        
        <primitive id="counter">
            <counter/>
        </primitive>   

    </primitives >

    <components>
        <component id="myScene">
            <transformation>
            </transformation>
            <materials>
                <material id="default"/>
            </materials>
            <texture id="boardTexture" length_s="19" length_t="19"/>
            <children>
                <!-- <componentref id="house" /> -->
                <!-- <primitiveref id="counter"/> -->
                <primitiveref id="board"/>
            </children>
        </component>

        <component id="wall">
            <transformation>
                <transformationref id="transformationWall"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="inherit" length_s="1" length_t="1" />
            <children>
                <componentref id="cube"/>
            </children>
        </component>

        <component id="wall1">
            <transformation>
            </transformation>
            <materials>
                <material id="wallMaterial"/>
            </materials>
            <texture id="wallTexture" length_s="1" length_t="1" />
            <children>
                <componentref id="wall"/>
            </children>
        </component>

        <component id="wall2">
            <transformation>
                <translate x="0" y="0" z="40" />
                <rotate axis="y" angle="90" />
            </transformation>
            <materials>
                <material id="wallMaterial"/>
            </materials>
            <texture id="wallTexture" length_s="1" length_t="1" />
            <children>
                <componentref id="wall"/>
            </children>
        </component>

        <component id="wall3">
            <transformation>
                <translate x="40" y="0" z="40" />
                <rotate axis="y" angle="180" />
            </transformation>
            <materials>
                <material id="wallMaterial"/>
            </materials>
            <texture id="wallTexture" length_s="1" length_t="1" />
            <children>
                <componentref id="wall"/>
            </children>
        </component>

        <component id="wall4">
            <transformation>
                <translate x="40" y="0" z="0" />
                <rotate axis="y" angle="-90" />
            </transformation>
            <materials>
                <material id="wallMaterial"/>
            </materials>
            <texture id="wallTexture" length_s="1" length_t="1" />
            <children>
                <componentref id="wall"/>
            </children>
        </component>

        <component id="floor">
            <transformation>
                <transformationref id="transformationFloor"/>
            </transformation>
            <materials>
                <material id="floorMaterial"/>
            </materials>
            <texture id="floorTexture" length_s="0.1" length_t="0.1" />
            <children>
                <primitiveref id="rectangle"/>
            </children>
        </component>

        <component id="house">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="none" length_s="1" length_t="1" />
            <children>
                <componentref id="wall1"/>
                <componentref id="wall4"/>
                <componentref id="floor"/>
            </children>
        </component>

        <component id="cube">
            <transformation>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="inherit"/>
            <children>
                <componentref id="cube_left"/>
                <componentref id="cube_right"/>
                <componentref id="cube_top"/>
                <componentref id="cube_bottom"/>
                <componentref id="cube_front"/>
                <componentref id="cube_back"/>
            </children>
        </component>  

        <component id="cube_left">
            <transformation>
                <translate x="-0.5" y="0" z="0"/>
                <rotate axis="y" angle="-90"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="rectangle"/>
            </children>
        </component>

        <component id="cube_right">
            <transformation>
                <translate x="0.5" y="0" z="0"/>
                <rotate axis="y" angle="90"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="rectangle"/>
            </children>
        </component>

        <component id="cube_top">
            <transformation>
                <translate x="0" y="0.5" z="0"/>
                <rotate axis="x" angle="-90"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="rectangle"/>
            </children>
        </component>

        <component id="cube_bottom">
            <transformation>
                <translate x="0" y="-0.5" z="0"/>
                <rotate axis="x" angle="90"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="rectangle"/>
            </children>
        </component>

        <component id="cube_front">
            <transformation>
                <translate x="0" y="0" z="0.5"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="rectangle"/>
            </children>
        </component>

        <component id="cube_back">
            <transformation>
                <translate x="0" y="0" z="-0.5"/>
                <rotate axis="y" angle="180"/>
            </transformation>
            <materials>
                <material id="inherit"/>
            </materials>
            <texture id="inherit"/>
            <children>
                <primitiveref id="rectangle"/>
            </children>
        </component>

    </components>
</yas>
